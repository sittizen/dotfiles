{
  "$schema": "https://opencode.ai/config.json",
  "theme": "tokyonight",
  "autoupdate": true,
  "model": "github-copilot/claude-opus-4.5",
  "small_model": "github-copilot/claude-haiku-4.5",
  //instructions: ["rules/*.md"], // todo
  "plugin": [
    "@plannotator/opencode@latest",
    "@ramtinj95/opencode-tokenscope"
  ],
  "share": "disabled",
  "tools": {
    "webfetch": false
  },
  "mcp": {
  "context7": {
    "type": "remote",
    "url": "https://mcp.context7.com/mcp",
    "headers": {
      "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
    },
    "enabled": true
  }
},
  "permission": {
    "lsp":"allow" ,
    "ralph-tui-prd":"allow"
  },
  "watcher": {
    "ignore": [
      "**/.assets/",
      "**/.build/",
      "**/.doc/sessions/",
      "**/.cache/",
      "**/.html/",
      "**/.mypy_cache/",
      "**/.pytest_cache/",
      "**/.venv/",
      "**/.vscode-server/",
      "**/__pycache__",
      "**/.coverage",
      "**/.DS_Store",
      "**/.git",
      "**/.hg",
      "**/.svn",
      "**/.vscode",
      "**/*.egg-info",
      "**/*.pyc",
      "**/CVS",
      "**/dist/",
      "**/.gnupg/",
      "**/.local/",
      "**/.ssh/",
      "**/.config/",
      "**/.streamlit"
    ]
  }
}
